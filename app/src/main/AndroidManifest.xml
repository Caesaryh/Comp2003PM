<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.passwordmanagerfigma" >

    <application
        android:allowBackup="true"
        android:theme="@style/AppTheme"
        android:label="@string/app_name" >

        <!-- 注册 login_screen_activity -->
        <activity
            android:name=".login_screen_activity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 注册 register_screen_activity -->
        <activity
            android:name=".register_screen_activity"
            android:exported="true" >
        </activity>

        <!-- 注册 login_successfully_screen_activity -->
        <activity
            android:name=".login_successfully_screen_activity"
            android:exported="true" >
        </activity>

    </application>
</manifest>